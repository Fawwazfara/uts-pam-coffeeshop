<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6F4E37"
    android:gravity="center">

    <!-- Logo atau Icon -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/coffee_placeholder"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvWelcome"
        android:layout_marginBottom="40dp"
        android:contentDescription="Coffee Shop Logo" />

    <!-- Teks Selamat Datang -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        android:alpha="0"
        android:translationY="50dp" />

    <!-- Teks Nama Coffee Shop -->
    <TextView
        android:id="@+id/tvCoffeeShop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kopi Nusantara"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_below="@+id/tvWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:alpha="0"
        android:translationY="50dp" />

    <!-- Tombol Mulai -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Mulai Sekarang"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/button_rounded_white"
        android:textColor="#6F4E37"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:alpha="0" />

</RelativeLayout>